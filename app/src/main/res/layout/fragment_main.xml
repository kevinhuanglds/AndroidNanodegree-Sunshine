<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.ischool.sunshine.MainFragment"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="@dimen/fragment_today_text_size"
        android:id="@+id/today"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/deg_C"
        android:textSize="@dimen/fragment_temperture_text_size"
        android:ems="10"
        android:id="@+id/txtDg2"
        android:layout_below="@+id/txtDg1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/deg_F"
        android:textSize="@dimen/fragment_temperture_text_size"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/txtDg1"
        android:layout_below="@+id/today"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/weather_status"
        android:textSize="@dimen/fragment_today_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDg2"
        android:layout_alignStart="@+id/imgWeather"
        android:id="@+id/txtWeatherStatus" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgWeather"
        android:layout_alignTop="@+id/txtDg1"
        android:layout_alignEnd="@+id/txtDg2" />

</RelativeLayout>
